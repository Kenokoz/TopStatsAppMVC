@model List<Game>

@if (Model.Count == 0)
{
    <div class="search__error-stats">Games are not found</div>
}
else
{
    foreach (var row in Model.OrderByDescending(g => g.Date))
    {
        string result;
        @if (row.LostRounds < row.WonRounds)
        {
            result = "Won";
        }
        else
        {
            result = "Lost";
        }
        <div class="stats__row stats__row-@(result.ToLower())">
            <div class="stats__inner">
                <div class="stats__date">@row.Date</div>
                <div class="stats__res">

                    <span class="@(result.ToLower())__span">@result</span>
                </div>
                <div class="stats__score">@row.WonRounds/@row.LostRounds</div>
                <div class="stats__map">@row.MapName</div>
                <div class="stats__kda">@row.Kills/@row.Assists/@row.Deaths</div>
            </div>
        </div>
    }
}

