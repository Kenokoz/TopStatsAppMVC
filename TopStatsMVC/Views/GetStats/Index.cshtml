@model TopStatsMVC.Models.Player

@if (Model == null)
{
    ViewData["error"] = 0;
}
else
{
    ViewData["error"] = 1;
}

<div class="intro">
    <div class="container">
        <div class="intro__inner">
            <h2 class="intro__suptitle">Welcome to TOP<span class="stats__span">Stats</span></h2>
            <h1 class="intro__title">Get top player <span class="stats__span">stats</span></h1>
            <div class="search__error" style="opacity: @ViewData["error"]">Player is not found</div>
            <form class="search" method="post" asp-controller="GetStats" asp-action="Index">
                <input class="search__input" type="text" name="nick" placeholder="Nickname" />
                <input class="search__btn" value="GET Stats" type="submit" />
            </form>
        </div>
    </div>
</div>

<script src="~/js/jquery/jquery.js"></script>
<script src="~/js/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
